{
	"name": "webapptemplate",
	"version": "2.3.0",
	"description": "Web App Template",
	"repository": {
		"type": "git",
		"url": "https://github.com/stupid-genius/webapptemplate"
	},
	"author": "Stupid Genius Software",
	"license": "GPL-3.0",
	"main": "app/server/index.js",
	"engines": {
		"node": ">=16"
	},
	"dependencies": {
		"@valkey/valkey-glide": "^1.3.1",
		"apiclient": "github:stupid-genius/APIClient",
		"body-parser": "^1.20.3",
		"connect-redis": "^8.0.1",
		"cors": "^2.8.5",
		"ejs": "2.5.5",
		"express": "^4.17.1",
		"express-openid-connect": "^2.17.1",
		"express-session": "^1.18.1",
		"htmx.org": "^1.9.12",
		"ioredis": "^5.6.0",
		"log-ng": "github:stupid-genius/log-ng",
		"mongodb": "^6.13.1",
		"morgan": "^1.10.0",
		"mysql2": "^2.3.3",
		"passport": "^0.7.0",
		"passport-local": "^1.0.0",
		"sequelize": "^6.21.0",
		"serve-favicon": "^2.5.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"browser-sync": "^3.0.3",
		"chai": "^4.3.10",
		"esbuild": "^0.17.19",
		"eslint": "^8.3.0",
		"karma": "^6.4.2",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^3.2.0",
		"karma-esbuild": "^2.3.0",
		"karma-firefox-launcher": "^2.1.2",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"mocha": "^9.2.2"
	},
	"scripts": {
		"app": "npm run build; docker compose up --build; docker compose down",
		"build": "npm run clean; ./tools/build.sh",
		"clean": "rm -rf dist",
		"container": "docker run --name webapp -p80:3000 --rm webapptemplate",
		"esbuild": "esbuild",
		"image": "docker build -t webapptemplate .",
		"mongo": "docker compose up -d mongo --build",
		"mysql": "docker compose up -d mysql --build",
		"nodemon": "npx nodemon dist/server/index.js",
		"package": "mkdir -p package; cd dist; npm pack --pack-destination='../package/'",
		"start": "DBHOST=localhost DOCSHOST=localhost KEYVALHOST=localhost NODE_ENV=development ./tools/serve.sh",
		"test": "mocha test && karma start"
	}
}
